{
    "package": {
        "name": "DCore",
        "repo": "homebrew",
        "subject": "decentfoundation"
    },

    "version": {
        "name": "VERSION"
    },

    "publish": true,
    "files": [
        {
            "includePattern": "./(dcore--)(.*\\.bottle\\.tar\\.gz)",
            "uploadPattern": "DCore-$2",
            "matrixParams": { "override": 1 }
        },
        {
            "includePattern": "./(DCore\\..*\\.pkg)",
            "uploadPattern": "$1",
            "matrixParams": { "override": 1 }
        }
    ]
}
